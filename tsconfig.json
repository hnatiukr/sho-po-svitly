{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "types": ["node"],
        "moduleResolution": "node",

        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "baseUrl": ".",

        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    }
}
